<Page x:Class="WpfApp_Ado.Net_classTask1.Pages.SignInPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_Ado.Net_classTask1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPageView">

    <Grid Background="White">

        <StackPanel>
            <Label Content="Username"/>
            <TextBox/>
            <Label Content="Password"/>
            <TextBox/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Width="100" Height="30" />
                <Button Grid.Column="1" Width="100" Height="30"/>
            </Grid>
        </StackPanel>
        
    </Grid>
</Page>
